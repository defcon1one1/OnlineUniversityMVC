@using OnlineUniversityMVC.Application.Dtos;
@model IEnumerable<CourseDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class ="row">
    @foreach(var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class=card-titler>@item.Name</h5>
                <a class="btn btn-primary" asp-controller="Course" asp-action="Details" asp-route-name="@item.Name">Details</a>
            </div>
        </div>
    }
</div>